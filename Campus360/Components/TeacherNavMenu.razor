            <NavLink class="nav-link" href="/teacher/courses">
                <span class="bi bi-book" aria-hidden="true"></span> My Courses
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/teacher/attendance">
                <span class="bi bi-check-circle" aria-hidden="true"></span> Mark Attendance
            </NavLink>
        </div>
